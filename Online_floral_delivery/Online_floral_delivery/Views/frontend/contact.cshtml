@model Online_floral_delivery.Models.contact
@{
    ViewBag.Title = "contact";
    Layout = "~/Views/shared/webMasterPage.cshtml";
}

<div class="breadcrumb-area gray-bg">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="@Url.Action("Index","frontend")">Home</a></li>
                <li class="active">Contact Us </li>
            </ul>
        </div>
    </div>
</div>
<div class="contact-us ptb-68">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="contact-page-title mb-40">
                    <h1>
                        Hi, Howdy
                        <br>
                        Let’s Connect us
                    </h1>
                </div>
            </div>
        </div>
        <div class="container-fluid h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-md-8">
                    @using (Html.BeginForm("contact", "frontend", FormMethod.Post))
                    {

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="contact-form-style mb-20">

                                    @Html.TextBoxFor(a => a.FullName, new { @placeholder = "Full Name" ,@required="required"})
                                   
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="contact-form-style mb-20">
                                    @Html.TextBoxFor(a => a.email, new { @placeholder = "Email Address", @required = "required" })
                          

                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="contact-form-style mb-20">
                                    @Html.TextBoxFor(a => a.subj, new { @placeholder = "Subject" , @required = "required" })
                                   

                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="contact-form-style">
                                    @Html.TextAreaFor(a => a.msg, new { @placeholder = "Message", @required = "required" })
                                   

                                    <button class="submit" type="submit">SEND MESSAGE</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
