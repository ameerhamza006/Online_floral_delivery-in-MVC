@model Online_floral_delivery.Models.registeration
@{
    ViewBag.Title = "register";
    Layout = "~/Views/shared/webMasterPage.cshtml";
}


<div class="breadcrumb-area gray-bg">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="@Url.Action("Index","frontend")">Home</a></li>
                <li class="active"> login / Register </li>
            </ul>
        </div>
    </div>
</div>



<div class="login-register-area pt-70 pb-75">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        @*<a class="" data-toggle="tab" href="#lg1">
                            <h4> login </h4>
                        </a>*@
                        <a data-toggle="tab" href="#lg2" class="active">
                            <h4> register </h4>
                        </a>
                    </div>
                    <div class="tab-content">



                        <div id="lg2" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">

                                    @using (Html.BeginForm("register", "frontend", FormMethod.Post))
                                    {

                                        @Html.TextBoxFor(a => a.F_name, new { @placeholder = "First Name" })

                                        @Html.TextBoxFor(a => a.L_name, new { @placeholder = "Last Name" })
                                        <input type="date" name="Dob" class="form-control" />



                                        @*<select class="form-control" name="gender">
                            <option>Gender</option>
                            <option>M</option>
                            <option>F</option>

                        </select>*@
                                        <br />
                                        @Html.TextBoxFor(a => a.Email, new { @placeholder = "Email" })

                                        @Html.PasswordFor(a => a.password, new { @placeholder = "Password" })
                                        @Html.TextBoxFor(a => a.P_No, new { @placeholder = "Phone Number" })
                                        @Html.TextBoxFor(a => a.Address, new { @placeholder = "Address" })
                                        <input type="hidden" name="role" value="User" />
                                        <div class="button-box">
                                            <button type="submit"><span>Register</span></button>
                                        </div>
                                    }

                                    @ViewBag.message


                                </div>
                            </div>
                        </div>


